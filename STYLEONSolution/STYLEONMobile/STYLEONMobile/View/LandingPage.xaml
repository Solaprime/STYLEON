<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="STYLEONMobile.View.LandingPage" 
             NavigationPage.HasNavigationBar="False"
             BackgroundImageSource="Female.jpg">
    <Grid Margin="20" RowDefinitions="1*, Auto, 1*">
        <StackLayout Grid.Row="1">
            <Label Text="StyleOn" Style="{StaticResource OnBoardingHeader}"/>
            <Label Text="Sign up now" Style="{StaticResource OnBoardingText}"/>
            <Label Text="get 30% cashback" Style="{StaticResource OnBoardingText}"/>
            <Label Text="on first purchase" Style="{StaticResource OnBoardingText}"/>
            <Button Text="sign in" Style="{StaticResource WhiteButton}" x:Name="SignInButton" ImageSource=""
                    Clicked="SignInButton_Clicked" Margin="0,10,0,5"/>
            <Button Text="sign up with Email" Style="{StaticResource WhiteButton}" x:Name="SignUP" Clicked="SignUP_Clicked" Margin="0,5,0,5"/>
            <Button Text="Log in with Facebook" Style="{StaticResource BlueButton}" x:Name="FaceBookButton" ImageSource=""
                    Clicked="FaceBookButton_Clicked" Margin="0,10,0,10">
                
            </Button>
        </StackLayout>
    </Grid>
</ContentPage>